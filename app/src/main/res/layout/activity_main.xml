<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T-Steps Counter"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="#242222"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/steps_target_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Target Steps : 0"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:backgroundTint="#00FF0000">

            <Button
                android:id="@+id/set_target"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_marginBottom="50px"
                android:backgroundTint="#C6C6CB"
                android:text="Set Today's Steps Target"
                android:textSize="50px"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/start_tracking"
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:backgroundTint="#2E2EEF"
                android:text="Start Tracking"
                android:layout_marginBottom="50px"
                android:textSize="50px"
                android:textColor="#fff"/>


        </LinearLayout>


</LinearLayout>